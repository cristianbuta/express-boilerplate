{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for quickly bootstrapping your express project",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint *.{ts,json}",
    "lint:fix": "eslint --fix '*.{js,ts,json}'",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": [
      "eslint",
      "prettier --write --ignore-unknown"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristianbuta/express-boilerplate.git"
  },
  "keywords": [
    "express",
    "typescript",
    "node.js"
  ],
  "author": "0xlup3x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cristianbuta/express-boilerplate/issues"
  },
  "homepage": "https://github.com/cristianbuta/express-boilerplate#readme",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}
